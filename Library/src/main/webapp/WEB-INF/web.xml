		<servlet-name>userModify</servlet-name>
		<servlet-class>com.min.edu.ctrl.UserModifyServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>userModify</servlet-name>
		<url-pattern>/userModifyServlet.do</url-pattern>
	</servlet-mapping>
	
